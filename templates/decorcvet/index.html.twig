{% extends 'base.html.twig' %}

{% block header %} {% endblock %}
{% block title %} {% endblock %}
{% block newCenter %} {% endblock %}
{% block nav %}
    <div class="container d-flex justify-content-between mt-4">
        <a href="/" class="mr-5" target="_blank"> <img src="/pic/ico/DecorCvet_logo.svg" alt="Декор Цвет"> </a>
        <a class="btn btn-link" href="{{ path('dekorcvet') }}">Въвеждане на разстение</a>
        <a class="btn btn-link" href="{{ path('updateGallery') }}">Опресняване на Галериите</a>
        <a class="btn btn-link" href="{{ path('change_pass') }}">Смяна на парола</a>
        <a class="btn btn-link" href="{{ path('app_logout') }}">Изход</a>
    </div>
{% endblock %}
{% block flash %}
    {% for message in app.flashes('success') %}
        <div class="container alert alert-success">
            ✔ {{ message|raw }}
        </div>
    {% endfor %}
{% endblock %}

{% block body %}
    {% set msg, color = 'ВЪВЕЖДАНЕ НА НОВО РАСТЕНИЕ', '#5eb5e0' %}
    {% if edit == true %}
        {% set msg, color = 'ПРОМЯНА НА РАСТЕНИЕ', '#718C00' %}
    {% endif %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-3">
                {{ form(form1) }}
                {% if pic is not empty %}
                    <div>
                        <img src="{{ pic }}" style="max-width: 100%">
                    </div>
                {% endif %}
            </div>
            <div class="col-md-9">
                <div class="text-center mb-3" style="height: 22px;width: 100%;font-weight:bold;background-color:{{ color }} ">
                    {{ msg }}
                </div>
                {{ form(form) }}
                <a class="btn btn-secondary" href="{{ path('dekorcvet') }}">Отказвам се</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <div style="background: #005F00;padding: 3% 0;">
    </div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        textarea {
            height: 11em !important;
        }
    </style>

{% endblock %}
